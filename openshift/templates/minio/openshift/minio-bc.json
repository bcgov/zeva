{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {},
  "objects": [
      {
        "apiVersion": "v1",
        "kind": "ImageStream",
        "metadata": {
            "creationTimestamp": null,
            "labels": {
                "shared": "true"
            },
            "name": "rhel7"
        },
        "spec": {
            "lookupPolicy": {
                "local": false
            },
            "tags": [
                {
                    "from": {
                        "kind": "DockerImage",
                        "name": "registry.access.redhat.com/rhel7/rhel:${RHEL_IMAGE_TAG}"
                    },
                    "importPolicy": {},
                    "name": "${RHEL_IMAGE_TAG}"
                }
            ]
        }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}",
        "creationTimestamp": null,
        "labels": {
          "shared": "true"
        }
      },
      "spec": {
        "lookupPolicy": {
          "local": false
        }
      },
      "status": {
        "dockerImageRepository": ""
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}${SUFFIX}",
        "creationTimestamp": null
      },
      "spec": {
        "triggers": [
          {
            "type": "ConfigChange"
          },
          {
            "type": "ImageChange",
            "imageChange": {}
          }
        ],
        "source": {
          "type": "Git",
          "git": {
            "uri": "${GIT_REPO_URL}",
            "ref": "${GIT_REF}"
          },
          "contextDir": "${SOURCE_CONTEXT_DIR}"
        },
        "strategy": {
          "type": "Docker",
          "dockerStrategy": {
            "from": {
              "kind": "ImageStreamTag",
              "name": "rhel7:${RHEL_IMAGE_TAG}"
            }
          }
        },
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "${NAME}:${OUTPUT_IMAGE_TAG}"
          }
        },
        "resources": {},
        "postCommit": {},
        "nodeSelector": null
      },
      "status": {
        "lastVersion": 0
      }
    }
  ],
  "parameters": [
    {
      "name": "NAME",
      "displayName": "Name",
      "description": "The name assigned to all objects defined in this template.",
      "required": true,
      "value": "minio"
    },
    {
      "name": "SUFFIX",
      "value": ""
    },
    {
      "name": "GIT_REPO_URL",
      "displayName": "Git Repo URL",
      "description": "The URL to your GIT repo, don't use the this default unless your just experimenting.",
      "required": true,
      "value": "https://github.com/bcgov/zeva.git"
    },
    {
      "name": "GIT_REF",
      "displayName": "Git Reference",
      "description": "The git reference or branch.",
      "required": true,
      "value": "pipeline-6-7"
    },
    {
      "name": "SOURCE_CONTEXT_DIR",
      "displayName": "Source Context Directory",
      "description": "The source context directory.",
      "required": true,
      "value": "openshift/templates/minio/docker"
    },
    {
      "name": "OUTPUT_IMAGE_TAG",
      "displayName": "Output Image Tag",
      "description": "The tag given to the built image.",
      "required": true,
      "value": "latest"
    },
    {
      "name": "RHEL_IMAGE_TAG",
      "displayName": "Rhel Image Tag",
      "description": "The tag given to the built image.",
      "required": true,
      "value": "7.7-481"
    }
  ]
}
