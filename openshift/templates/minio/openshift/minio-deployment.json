{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "minio",
    "annotations": {
      "description": "Minio with persistent storage. By BC Gov.",
      "iconClass": "icon-hdd",
      "openshift.io/display-name": "BC Gov Minio"
    }
  },
  "objects": [
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}",
        "generation": 1,
        "labels": {
          "app": "${NAME}"
        }
      },
      "spec": {
        "strategy": {
          "type": "Recreate",
          "resources": {},
          "activeDeadlineSeconds": 21600
        },
        "triggers": [
          {
            "type": "ConfigChange"
          },
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [
                "${NAME}"
              ],
              "from": {
                "kind": "ImageStreamTag",
                "name": "${IMAGESTREAM_NAME}:${ENV_NAME}",
                "namespace": "${IMAGESTREAM_NAMESPACE}"
              }
            }
          }
        ],
        "replicas": 1,
        "test": false,
        "selector": {
          "app": "${NAME}",
          "deploymentconfig": "${NAME}"
        },
        "template": {
          "metadata": {
            "creationTimestamp": null,
            "labels": {
              "app": "${NAME}",
              "deploymentconfig": "${NAME}"
            }
          },
          "spec": {
            "volumes": [
              {
                "name": "${NAME}-vol",
                "persistentVolumeClaim": {
                  "claimName": "${NAME}-pv-claim"
                }
              }
            ],
            "containers": [
              {
                "name": "${NAME}",
                "image": "",
                "ports": [
                  {
                    "containerPort": 9000,
                    "protocol": "TCP"
                  }
                ],
                "env": [
                  {
                    "name": "MINIO_ACCESS_KEY",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "zeva-minio",
                        "key": "MINIO_ACCESS_KEY"
                      }
                    }
                  },
                  {
                    "name": "MINIO_SECRET_KEY",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "zeva-minio",
                        "key": "MINIO_SECRET_KEY"
                      }
                    }
                  },
                  {
                    "name": "MINIO_CONFIG_DIR",
                    "value": "/tmp"
                  },
                  {
                    "name": "MINIO_DATA_DIR",
                    "value": "/data"
                  }
                ],
                "resources": {},
                "volumeMounts": [
                  {
                    "name": "${NAME}-vol",
                    "mountPath": "/data"
                  }
                ],
                "terminationMessagePath": "/dev/termination-log",
                "terminationMessagePolicy": "File",
                "imagePullPolicy": "Always"
              }
            ],
            "restartPolicy": "Always",
            "terminationGracePeriodSeconds": 30,
            "dnsPolicy": "ClusterFirst",
            "securityContext": {},
            "schedulerName": "default-scheduler"
          }
        }
      },
      "status": {
        "latestVersion": 0,
        "observedGeneration": 0,
        "replicas": 0,
        "updatedReplicas": 0,
        "availableReplicas": 0,
        "unavailableReplicas": 0
      }
    },
    {
      "kind": "PersistentVolumeClaim",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}-pv-claim",
        "labels": {
          "app": "${NAME}"
        }
      },
      "spec": {
        "accessModes": [
          "ReadWriteOnce"
        ],
        "resources": {
          "requests": {
            "storage": "${VOLUME_CAPACITY}"
          }
        }
      },
      "status": {}
    },
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}",
        "creationTimestamp": null,
        "labels": {
          "app": "${NAME}"
        }
      },
      "spec": {
        "ports": [
          {
            "name": "9000-tcp",
            "protocol": "TCP",
            "port": 9000,
            "targetPort": 9000
          }
        ],
        "selector": {
          "deploymentconfig": "${NAME}"
        },
        "type": "ClusterIP",
        "sessionAffinity": "None"
      },
      "status": {
        "loadBalancer": {}
      }
    }
  ],
  "parameters": [
    {
      "name": "ENV_NAME",
      "value": "dev",
      "required": true
    },
    {
      "name": "IMAGESTREAM_NAME",
      "value": "minio",
      "required": true
    },
    {
      "name": "IMAGESTREAM_NAMESPACE",
      "value": "tbiwaq-tools",
      "required": true
    },
    {
      "name": "NAME",
      "displayName": "Name to apply to objects in the template",
      "value": "minio",
      "required": true
    },
    {
      "name": "VOLUME_CAPACITY",
      "displayName": "Volume Capacity",
      "description": "Volume space available to Minio server for files, e.g. 512Mi, 2Gi.",
      "value": "5Gi",
      "required": true
    }
  ]
}
